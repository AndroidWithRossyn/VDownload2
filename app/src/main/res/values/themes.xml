<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VDownload" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/adsTagBg</item>
        <item name="colorSecondaryVariant">@color/adsTagBg</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/adsTagBg</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.VDownload.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
    </style>

    <style name="Montserrat_Text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textStyle">bold</item>
    </style>



    <style name="MaterialAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/purple</item>
        <item name="materialAlertDialogTitlePanelStyle">@style/TitlePaneStyleCenter</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogTitleIconStyle">@style/TitleIconStyleCenter</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="shapeAppearanceMediumComponent">@style/RoundShapeAppearance</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!--        <item name="buttonBarStyle">@style/ButtonBarStyle</item>-->
        <!--        <item name="android:layout_marginTop">2dp</item>-->
        <!--        <item name="android:layout_marginBottom">2dp</item>-->
    </style>
    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
    <style name="TitlePaneStyleCenter" parent="MaterialAlertDialog.MaterialComponents.Title.Panel.CenterStacked">
        <item name="android:background">@color/white_mod</item>
        <item name="android:padding">18dp</item>
    </style>
    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked">
        <item name="android:textColor">@color/material_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>
    <style name="TitleIconStyleCenter" parent="MaterialAlertDialog.MaterialComponents.Title.Icon.CenterStacked">
        <item name="android:padding">2dp</item>
    </style>
    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/white_mod</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/material_light</item>
        <item name="rippleColor">#a4a4a4</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/material_light</item>
        <item name="rippleColor">#a4a4a4</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="RoundShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    <style name="ButtonBarStyle">
        <item name="android:background">@color/material_dark_light</item>
    </style>

    <style name="prefsTheme" parent="Theme.MaterialComponents">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="RippleButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#FFFFFF</item>
    </style>
    <style name="MySearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="searchHintIcon">@null</item>
        <item name="queryBackground">@null</item>
        <item name="searchIcon">@null</item>
    </style>
    <style name="GradientTheme" parent="Theme.VDownload">
        <item name="android:windowBackground">@drawable/gradient_theme</item>
    </style>

    <style name="SplashTheme" parent="Theme.VDownload">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
    <style name="DarkTransparentToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">#66A8A5A5</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>
    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.2</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="GalaxyZooThemeToolbarDarkOverflow" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionOverflowButtonStyle">@style/Widget.ActionButton.Overflow</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Widget.ActionButton.Overflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:color">#ffffffff</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Custom">
        <item name="android:windowFullscreen">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="dialog">
        <item name="background">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="tab_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.DayNight">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorSwitchThumbNormal">#fff</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:colorForeground">#FFFFFF</item>
        <item name="colorAccent">#fff</item>

    </style>

    <style name="tab_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/tab_text_style</item>
        <item name="tabSelectedTextColor">@color/adsTagBg</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="TabLayout" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
        <style name="AppTheme.AppBarOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
