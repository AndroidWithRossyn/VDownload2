<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash"
    tools:context=".activity.DashboardActivity">

    <TextView
        android:id="@+id/menu_opn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/menu_slide_opened"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Menu"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/ll1">


        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="2dp"
            android:singleLine="true"
            android:text="Welcome"
            android:textColor="#fff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/welcome_thought"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:text="Good Experience Video download"
            android:textColor="#80FFFFFF"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/left_nav"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="4">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="25dp"
            android:layout_weight="0.1"
            android:padding="5dp"
            android:src="@drawable/menu"
            app:tint="@color/white" />


        <TextView
            android:id="@+id/homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.3"
            android:gravity="center"
            android:rotation="270"
            android:text="HomePage"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wallpaper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homepage"
            android:layout_weight="1.3"
            android:gravity="center"
            android:rotation="270"
            android:text="Wallpaper"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />

        <!--            <TextView-->
        <!--                android:id="@+id/pro"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_above="@+id/saved"-->
        <!--                android:layout_below="@id/wallpaper"-->
        <!--                android:layout_weight="1"-->
        <!--                android:gravity="center"-->
        <!--                android:rotation="270"-->
        <!--                android:text="Pro"-->
        <!--                android:textColor="@color/white"-->
        <!--                android:textSize="12dp"-->
        <!--                android:textStyle="bold" />-->

        <TextView
            android:id="@+id/saved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_weight="1.3"
            android:gravity="center"
            android:rotation="270"
            android:text="Saved"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>